:-module(option, [option/6]).

%Dominios
%Code = integer
%Message = string
%ChatbotCodeLink = integer
%InitialFlowLink = integer
%Keywords = list
%Option = list (TDA option)

%Predicados:
% option/6(Code,Message,ChatbotCodeLink,InitialFlowLink,Keywords,Option)
% stringlist/1(Keywords)

%Metas
%Primarias
%option(Code,Mens,Cblink,Flink,Keys,Option)
%Secundarias
%stringlist(L)

%Clausulas de Horn
%Base de conocimiento


%Reglas
option(Code, Mens, Cblink, Flink, Keys, Option):-
    integer(Code), Code >= 0,
    string(Mens),
    integer(Cblink), Cblink >= 0,
    integer(Flink), Flink >= 0,
    stringlist(Keys),
    Option = [Code, Mens, Cblink, Flink, Keys].

stringlist([]):-!.
stringlist([A|B]):-
    string(A),
    stringlist(B).



